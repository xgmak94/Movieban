generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model movie {
  id                Int         @id @default(autoincrement())
  created_at        DateTime?   @default(now()) @db.Timestamptz(6)
  adult             Boolean?
  backdrop_path     String?     @db.VarChar
  genre_ids         Int[]
  original_language String?     @db.VarChar
  original_title    String?     @db.VarChar
  overview          String?     @db.VarChar
  popularity        Float?
  poster_path       String?     @db.VarChar
  release_date      DateTime?   @db.Date
  title             String?     @db.VarChar
  vote_average      Float?
  vote_count        Int?
  video             Boolean?
  user_board        user_board?
}

model profiles {
  id         String    @id(map: "profile_pkey") @db.Uuid
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  full_name  String?
  avatar_url String?   @db.VarChar
}

model user_board {
  id           Int       @id(map: "movies_pkey") @default(autoincrement())
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  user         String?   @db.VarChar
  movie_status String?   @default("backlog") @db.VarChar
  movie_id     Int?      @unique
  movie        movie?    @relation(fields: [movie_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
